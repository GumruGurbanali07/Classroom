{
  "openapi": "3.0.1",
  "info": {
    "title": "ToDoList.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Teacher/register": {
      "post": {
        "tags": [
          "Teacher"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterTeacher"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterTeacher"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterTeacher"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Teacher/login": {
      "post": {
        "tags": [
          "Teacher"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginTeacher"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginTeacher"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginTeacher"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginTeacher": {
        "required": [
          "gmail",
          "password"
        ],
        "type": "object",
        "properties": {
          "gmail": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegisterTeacher": {
        "required": [
          "gmail",
          "name",
          "password",
          "resetPassword",
          "subject",
          "surname"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "surname": {
            "minLength": 1,
            "type": "string"
          },
          "subject": {
            "minLength": 1,
            "type": "string"
          },
          "gmail": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          },
          "resetPassword": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}